
<div class="home_banner">
    <div class="page-width">
        <div class="swiper">
            <div class="swiper-wrapper">
                {% for block in section.blocks %}
                    <div class="banner swiper-slide">
                        {% if block.settings.desktop_image != blank %}
                            <img src="{{ block.settings.desktop_image | img_url: 'master' }}" alt="{{ block.settings.desktop_image.alt | escape }}" class="desktop">
                            <img src="{{ block.settings.mobile_image | img_url: 'master' }}" alt="{{ block.settings.mobile_image.alt | escape }}" style="display: none;" class="mobile">
                        {% else %}
                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                        {% endif %}
                    </div>
                {% endfor %}
            </div>

            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>

            <!-- If we need navigation buttons -->
            <div class="swiper-button-prev arrow">
                <img src="https://cdn.shopify.com/s/files/1/1506/1208/files/new_banner_icon_left.svg?v=1630141026" alt="next" loading="lazy">
            </div>
            <div class="swiper-button-next arrow">
                <img src="https://cdn.shopify.com/s/files/1/1506/1208/files/new_banner_Icon_right.svg?v=1630141026" alt="next" loading="lazy">
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Slideshow Banner",
    "max_blocks": 8,
    "blocks": [
        {
            "type": "image",
            "name": "Banner",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "desktop_image",
                    "label": "Desktop Image"
                },
                {
                    "type": "image_picker",
                    "id": "mobile_image",
                    "label": "Mobile Image"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Slideshow Banner",
            "blocks": [
                {
                    "type": "image"
                }
            ]
        }
    ]
}
{% endschema %}

<script>
    const swiper = new Swiper('.swiper', {
        // Optional parameters
        direction: 'horizontal',
        loop: true,

        // fade effect
        spaceBetween: 30,
        speed: 700,
        effect: "fade",

        // If we need pagination
        pagination: {
            el: '.swiper-pagination',
        },

        // Navigation arrows
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },

    });
</script>