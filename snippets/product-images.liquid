<div class="product-slider-img">
    <div class="nav-img">
      <div class="slider-nav">
        {% for image in product.images %}
          <div class="single-nav-img">
            <img src="{{ image.src | img_url: 'medium' }}" alt="{{ image.alt | escape }}" loading="lazy" style="transition: 0.4s all;">
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="main-img">
      <div class="product-images slides js-slides">
        {% for image in product.images %}
          <div class="single-img" style="position: relative;" {% if image.attached_to_variant? %}data-variant="{{image.variants.first.id}}"{% endif %} style="{% if forloop.index > 1 %}display: none{% endif %}">
            <img class="mainProductimg img-fluid" src="{{ image.src | img_url: 'master' }}" alt="{{ image.alt | escape }}">
            <a style="display: none; opacity: 0; transition: 0.3s all;" class="image-link" href="{{ image.src | img_url: 'master' }}" target="_blank">
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrows-fullscreen" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M5.828 10.172a.5.5 0 0 0-.707 0l-4.096 4.096V11.5a.5.5 0 0 0-1 0v3.975a.5.5 0 0 0 .5.5H4.5a.5.5 0 0 0 0-1H1.732l4.096-4.096a.5.5 0 0 0 0-.707zm4.344 0a.5.5 0 0 1 .707 0l4.096 4.096V11.5a.5.5 0 1 1 1 0v3.975a.5.5 0 0 1-.5.5H11.5a.5.5 0 0 1 0-1h2.768l-4.096-4.096a.5.5 0 0 1 0-.707zm0-4.344a.5.5 0 0 0 .707 0l4.096-4.096V4.5a.5.5 0 1 0 1 0V.525a.5.5 0 0 0-.5-.5H11.5a.5.5 0 0 0 0 1h2.768l-4.096 4.096a.5.5 0 0 0 0 .707zm-4.344 0a.5.5 0 0 1-.707 0L1.025 1.732V4.5a.5.5 0 0 1-1 0V.525a.5.5 0 0 1 .5-.5H4.5a.5.5 0 0 1 0 1H1.732l4.096 4.096a.5.5 0 0 1 0 .707z"/>
              </svg>
            </a>
          </div> 
        {% endfor %}
      </div>
    </div>
  </div>



